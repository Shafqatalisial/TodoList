@model List<tble_todo>
@{
    ViewBag.Title = "ViewTask";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link rel="stylesheet" href="~/Content/Site.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <title></title>
</head>
<body class="bdy">
    <div class="col-md-10">
        <div class="table-bordered table-striped ">
            <table class="table-bordered table-striped col-md-4">
                <tr>
                    <th>ID</th>
                    <th style="text-align:center">Task</th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td style="width:170px">@item.Task</td>
                        <td>@Html.ActionLink("Update", "Edit", "Home", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-success" })</td>
                       <td>@Html.ActionLink("Delete", "Delete", "Home", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger" })</td>
                    </tr>
                }
            </table>
        </div>
    </div>




</body>
</html>
